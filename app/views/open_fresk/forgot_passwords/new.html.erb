<main class="form-signin text-center">
  <%= form_tag forgot_password_path, {class: 'form-signin'} do %>
    <%= hidden_field_tag :language, params[:language].present? ? params[:language] : "en" %>
    <h1 class="h3 mb-3 fw-normal"><%= t('password_recovery') %></h1>

    <div class="form-floating mb-3">
      <%= email_field_tag :email, nil, placeholder: "Email address", class: 'form-control', required: true, autofocus: true %>
      <label for="floatingInput">Email</label>
      <%= hidden_field_tag :language, params[:language].present? ? params[:language] : "en" %>
    </div>

    <%= submit_tag t('sessions.submit'), class: "w-100 btn btn-lg btn-primary rounded-pill" %>
  <% end %>
</main>
